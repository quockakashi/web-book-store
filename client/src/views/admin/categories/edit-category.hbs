<h3 style="font-weight: bold; margin-bottom: 0px;">
        {{component.name}}
    </h3>
    <p class="mb-4">{{component.subtitle}}</p>
    <form enctype="multipart/form-data" class="form rounded-3 shadow-sm mx-auto py-3 px-4 bg-light" style="max-width: 550px;" onsubmit="return handleSubmit(event)" action="/api/categories/{{category._id}}" method="post">
        <input type="hidden" value="{{category._id}}" name="_id" id="id">
        <div class="mb-3 g-2 row align-items-center">
          <div class="col-4">
            <label for="exampleInputEmail1" class="form-label">Category Name:</label>
          </div>
          <div class="col-8">
            <input type="text" class="form-control" id="name"
            value="{{category.name}}" name="name">
          </div>
        </div>
        <div class="mb-3 g-2 row align-items-center">
            <div class="col-4">
              <label for="email" class="form-label">Description:</label>
            </div>
            <div class="col-8">
              <textarea type="text"
              value="{{category.description}}"
              name="description"
              class="form-control" 
              id="description" ></textarea>
            </div>
          </div>
        <div class="d-flex w-100 justify-content-center mt-5">
            <button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-danger me-4">Cancel</button>
            <button type="submit" class="btn btn-primary">Continue</button>
        </div>
      </form>
  
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Do your want to cancel this action?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        If you continue, this editing will be canceled.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="/admin/categories" type="button" class="btn btn-primary" >Continue</a>
      </div>
    </div>
  </div>
</div>

<script src="/admin/js/edit-category-page.js"></script>