    <script>
        function copyText1() {
            var text = document.getElementById("myInput").value;

            var tempInput = document.createElement("input");
            tempInput.value = text;
            document.body.appendChild(tempInput);

            tempInput.select();

            document.execCommand("copy");

            document.body.removeChild(tempInput);
            Swal.fire({
                title: "Đã sao chép!",
                text: text,
                icon: "success",
                timer: 2000, 
                showConfirmButton: false
            });
        }

        function copyText2() {
            var text = document.getElementById("transfer-context").value;

            var tempInput = document.createElement("input");
            tempInput.value = text;
            document.body.appendChild(tempInput);

            tempInput.select();

            document.execCommand("copy");

            document.body.removeChild(tempInput);

            Swal.fire({
                title: "Đã sao chép!",
                text: text,
                icon: "success",
                timer: 2000, 
                showConfirmButton: false
            });
        }
