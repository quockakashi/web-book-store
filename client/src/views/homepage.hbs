  <style>
    * {
      margin: 0;
      padding: 0;
    }

    html, body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    input:focus {
        outline: none !important;
    }

    .hide {
        opacity: 0;
    }

    .card {
        cursor: pointer;
    }

    .card:hover {
        transform: scale(1.05);
        transition: transform 0.4s;
    }

    

  </style>

  <body>
        <header style="position: fixed; top: 0; left: 0; right: 0; z-index: 99;" class="bg-white">
            <nav class="d-flex align-items-center p-3" style="box-shadow: 5px 5px 5px 0 rgba(0, 0, 0, 0.05); gap: 32px;">
                <a style="font-size: 24px;" href="#">Book Store</a>
                <div class="d-flex justify-content-center align-items-center gap-4" style="flex: 1; position: relative;">
                    <button class="border-0 text-primary category-btn" style="background-color: inherit;">
                        <i class="fa-solid fa-bars-progress"></i>
                    </button>
                    <div class="category-menu hide bg-white rounded-3 shadow-lg" style="position: absolute; z-index: 999; top: 100%; padding: 12px 24px;">
                        <ul class="category-list" style="display: grid; list-style: none;grid-template-columns: 1fr 1fr 1fr 1fr; padding: 0; row-gap: 16px; column-gap: 32px;">
                            
                        </ul>
                    </div>
                    <form style="max-width: 500px; width: 100%;">
                        <div class="input-group mb-3 rounded-4 overflow-hidden shadow-sm mt-3">
                            <input type="text" class="form-control border-0 shadow-none" aria-label="Amount (to the nearest dollar)" placeholder="Find your book!">
                            <span class="input-group-text border-0 text-primary" style="background-color: inherit"><i class="fa-solid fa-magnifying-glass"></i></span>
                          </div>
                    </form>
                </div>
                <div class="d-flex gap-4">
                    <a class="text-primary" href="#">
                        <i class="fa-regular fa-user"></i>
                    </a>
                    <a class="text-primary" href="#">
                        <i class="fa-solid fa-cart-shopping"></i>
                    </a>
                </div>
            </nav>
        </header>

        <main class="container-fluid" style="padding-top: 110px; padding-bottom: 40px;">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>                
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="https://images-production.bookshop.org/spree/promo_banner_slides/desktop_images/289/original/BOOKSHOP_BlackJoy_DSPStatic2048x600.jpg?1703000513" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="https://images-production.bookshop.org/spree/promo_banner_slides/desktop_images/289/original/BOOKSHOP_BlackJoy_DSPStatic2048x600.jpg?1703000513" class="d-block w-100" alt="...">
                  </div>
                  <div class="carousel-item">
                    <img src="https://images-production.bookshop.org/spree/promo_banner_slides/desktop_images/289/original/BOOKSHOP_BlackJoy_DSPStatic2048x600.jpg?1703000513" class="d-block w-100" alt="...">
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <section class="mt-5">
                <h5 class="mb-3" style="color: #ff3232;">
                    <i class="fa-solid fa-fire"></i>
                    &nbsp;New books
                </h5>
                <div class="new-book-container py-2 d-flex gap-3" style="overflow-x: scroll;">
                     
                </div>
              </section>

              <section class="mt-5">
                <h5 class="mb-3" style="color: #ffa500;">
                    <i class="fa-solid fa-star"></i>
                    &nbsp;Top rating books
                </h5>
                <div class="top-rating-container py-2 d-flex gap-3" style="overflow-x: scroll;">
                    
                </div>
              </section>
              <section class="mt-5">
                <h5 class="mb-3" style="color:  #25A18E;">
                    <i class="fa-solid fa-basket-shopping"></i>
                    &nbsp;Best seller
                </h5>
                <div class="best-seller-container py-2 d-flex gap-3" style="overflow-x: scroll;">
                    
                </div>
              </section>
              <section class="mt-5">
                <h5 class="mb-3" style="color:  #8F00FF;">
                    <i class="fa-solid fa-child-reaching"></i>
                    &nbsp;For kids
                </h5>
                <div class="for-kid-container py-2 d-flex gap-3" style="overflow-x: scroll;">
                    
                </div>
              </section>
        </main>

