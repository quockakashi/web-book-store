  <body>
        <header style="position: fixed; top: 0; left: 0; right: 0; z-index: 99; box-shadow: 5px 5px 5px 0 rgba(0, 0, 0, 0.05);" class="bg-white">
            <nav class="d-flex align-items-center p-3 mx-auto" style=" gap: 32px; max-width: 1200px">
                <a style="font-size: 24px;" href="/">Book Store</a>
                <div class="d-flex justify-content-center align-items-center gap-4" style="flex: 1; position: relative;">
                    <button class="border-0 text-primary category-btn" style="background-color: inherit;">
                        <i class="fa-solid fa-bars-progress"></i>
                    </button>
                    <div class="category-menu hide bg-white rounded-3 shadow-lg" style="position: absolute; z-index: 999; top: 100%; padding: 12px 24px;">
                        <ul class="category-list" style="display: grid; list-style: none;grid-template-columns: 1fr 1fr 1fr 1fr; padding: 0; row-gap: 16px; column-gap: 32px;">
                            
                        </ul>
                    </div>
                    <form style="max-width: 500px; width: 100%;" action="/books">
                        <div class="input-group mb-3 rounded-4 overflow-hidden shadow-sm mt-3">
                            <input type="text" class="search-input form-control border-0 shadow-none" aria-label="Amount (to the nearest dollar)" placeholder="Find your book!" required name="keyword">
                            <button type="submit" class="input-group-text border-0 text-primary" style="background-color: inherit"><i class="fa-solid fa-magnifying-glass"></i></button>
                          </div>
                    </form>
                </div>
                <nav class="1-navbar" id="navbar">
                  <nav class="nav">
                    <div class="nav-list align-items-center d-flex">
                       {{#if user}} 
                        <a href="/cart" class="notification nav_link" style="margin-left:5px;margin-right:5px">
                            <span style="font-size: 20px;"><i class="fa-solid fa-cart-shopping"></i></span>
                            <span class="badge nav_name ms-1 cart-size hide"></span>
                          </a> 
                       {{/if}}
                        {{#if user}}
                        <div style="position: relative; display:inline">
                          <img class="user-avatar" style="object-fit: cover; object-position: center; width: 30px; height: 30px; border-radius: 50%; cursor: pointer" alt="user-img" src="{{user.avatar.url}}" />
                          <div class="bg-light shadow-sm hide profile-popover" style="position: absolute; {{#eq user.role 'admin'}}bottom: -180px;{{else}}bottom: -140px;{{/eq}} right: 0; width: 200px; border-radius: 8px; padding: 4px 8px">
                            <ul style="padding-left: 0;">
                              <li class="mb-2">
                                <a class="d-flex user-menu-item" 
                                href="/account"
                                style="justify-content: space-between; align-items: center">
                                  <i class="fa-regular fa-user"></i>
                                  <p class="fw-bold full-name">{{user.fullName}}</p>
                                </a>
                              </li>
                              {{#eq user.role 'admin'}}
                              <li class="mt-1">
                                <a class="d-flex user-menu-item" style="justify-content: space-between; align-items: center" target="_blank" href="/admin">
                                  <i class="fa-solid fa-screwdriver-wrench"></i>
                                  <p>Admin page</p>
                                </a>
                              </li>
                              {{/eq}}
                              <li class="mt-1">
                                <a class="d-flex user-menu-item" style="justify-content: space-between; align-items: center" target="_blank" href="/wallet">
                                  <i class="fa-regular fa-credit-card"></i>
                                  <p>My wallet</p>
                                </a>
                              </li>
                              <li class="mt-1">
                                <a class="d-flex user-menu-item logout-btn" style="justify-content: space-between; align-items: center" href="/logout">
                                  <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                  <p>Logout</p>
                                </a>
                              </li>
                            </ul>
                          </div>
                        </div>
                        {{else}}
                          <a class="nav_link" href="/login" style="margin-left:5px;margin-right:5px">
                            <span class="nav_name ms-1">Login</span>
                        </a>
                        {{/if}}
                        
                    </div>
                  </nav>
                </nav>
            </nav>
        </header>

        {{{body}}}
