  <script>
    $('.user-avatar').click(function() {
            $('.profile-popover').toggleClass('hide')
    })

    updateCartSize();

    $('.logout-btn').click(() => {
      localStorage.clear();
    })

    function updateCartSize(){
      const cart = JSON.parse(localStorage.getItem('cart')) || [];

      if(cart.length > 0) {
        $('.cart-size').removeClass('hide');
        $('.cart-size').text(cart.length);
      } else {
        $('.cart-size').addClass('hide');
      }
    }
  </script>



