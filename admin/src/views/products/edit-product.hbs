<link href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
<h3 style="font-weight: bold; margin-bottom: 0px;">
        {{component.name}}
    </h3>
    <p class="mb-4">{{component.subtitle}}</p>

<form enctype="multipart/form-data" class="form rounded-3 shadow-sm mx-auto py-3 px-4 bg-light" style="max-width: 700px;" onsubmit="return handleSubmit(event)" >
    <input type="hidden" value="{{product._id}}" id="id" name="id">
    <div class="mb-3 g-2 row align-items-center">
        <div class="col-3">                     <label    
                for="name"
                class="form-label">Product Name:<span class="text-danger">*</span>
        </label>
          </div>
          <div class="col-9">
            <input type="text" class="form-control" id="name"
            required
            name="name"
            value="{{product.name}}">
          </div>
        </div>
        <div class="mb-3 g-2 row align-items-center" style="align-content: flex-end; justify-content: end">
            <div class="col-3">
              <label for="authors" class="form-label">Authors:</label>
            </div>
            <div class="col-9">
              <input type="text"
              name="authors"
              class="form-control" 
              id="authors" aria-describedby="emailHelp"
              value="{{product.authors}}">
            </div>
            <div class="col-9" style="align-self: flex-end;">
                <p class="form-text" style="margin: 0;">If more than two author: Nguyen A, Nguyen B</p>
            </div>
          </div>
          <div class="mb-3 g-2 row align-items-center">
            <div class="col-3">
              <label for="publisher" class="form-label">Publisher:</label>
            </div>
            <div class="col-9">
              <input type="text"
              class="form-control" 
              id="publisher"
              name="publisher"
              value="{{product.publisher}}"
              aria-describedby="emailHelp">
            </div>
          </div>
          <div class="mb-3 g-2 row align-items-center">
                <div class="col-3">
                <label for="publishDate" class="form-label">Publish Date:</label>
                </div>
                <div class="col-9">
                <input type="date" type="text"
                class="form-control" 
                id="publishDate"
                name="publishDate"
                value="{{product.publishDate}}"
                >
                </div>
            </div>
          <div class="mb-3 g-2 row align-items-center">
            <div class="col-3">
                <label for="role" class="form-label">Categories:<span class="text-danger">*</span> 
            </div>
            <div class="col-9">
                <select
                    id="categories"
                    name="categories"
                    multiple
                    class="form-select" size="5" value="{{product.categories}}">
                    {{#each categories}}
                        <option value="{{this._id}}" {{#ifIn this._id ../product.categories}}selected{{/ifIn}}>{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            </div>
            <div class="mb-3 g-2 row align-items-center">
                <div class="col-3">
                    <label 
                    for="price" class="form-label">Price:<span class="text-danger">*</span></label>
                </div>
                <div class="col-9">
                    <div class="input-group mb-3">
                        <span 
                        class="input-group-text text-primary"
                        >&#8363;</span>
                        <input
                        id="price"
                        name="price"
                        step="0.01"
                        value="{{product.price}}"
                        type="number" class="form-control"
                        style="border-left: none" 
                        aria-label="Amount (to the nearest dollar)">
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                 <div class="col-3">
                    <label for="publisher" class="form-label">Language:</label>
                </div>
                <div class="col-9">
                    <input
                        type="text"
                        name="language"
                        id="language"
                        class="form-control" 
                        id="pages"
                        value="{{product.language}}">
                </div>
        </div>
            <div class="row mb-3">
                 <div class="col-3">
                    <label for="publisher" class="form-label">Description:</label>
                </div>
                <div class="col-9">
                    <textarea
                        name="description"
                        id="description"
                        rows="5"
                        type="text" 
                        class="form-control" 
                        id="pages"
                        >{{product.description}}</textarea>
                </div>
        </div>
        <div class="row mb-3">
                 <div class="col-3">
                    <label for="publisher" class="form-label">Preview url:</label>
                </div>
                <div class="col-9">
                    <input
                        type="text"
                        name="preview"
                        id="preview"
                        class="form-control" 
                        id="pages"
                        value="{{product.preview}}">
                </div>
        </div>
        <div class="row align-items-center mb-3">
            <div class="col-6 row">
                 <div class="col-3">
                    <label for="pages" class="form-label">Pages:</label>
                </div>
                <div class="col-9">
                    <input
                        id="pages"
                        name="pages" 
                        type="number"
                        class="form-control" 
                        id="pages"
                        value="{{product.pages}}">
                </div>
            </div>
            <div class="col-6 row">
                 <div class="col-3">
                    <label
                     for="stock" class="form-label">Stock:<span class="text-danger">*</span></label>
                </div>
                <div class="col-9">
                    <input
                        id="stock"
                        name="stock"
                        type="number"
                        class="form-control" 
                        id="number"
                        name="number"
                        value="{{product.stock}}">
                </div>
            </div>
        </div>
        
        <div class="mt-3 mb-4">
            <div class="mb-2 d-flex justify-content-center">
                <img id="selectedImage" src="{{product.image}}"
                alt="example placeholder" style="width: 200px;" />
            </div>
            <div class="d-flex justify-content-center">
                <div class="btn btn-rounded btn-sm" style="border-radius: 80px; background-color: rgba(11, 49, 171, 0.6);" >
                    <label class="form-label text-white m-1" for="image">Choose file</label>
                    <input 
                    type="file" 
                    name="image"
                    id="image"
                    accept="image/jpeg, image/png"
                    class="form-control d-none" onchange="displaySelectedImage(event, 'selectedImage')" />
                </div>
            </div>
        </div>
        <div class="d-flex w-100 justify-content-center mt-3">
            <button type="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop" class="btn btn-danger me-4">Cancle</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </form>
  
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Do your want to cancel this action?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        If you continue, this editing will be canceled.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="/products" type="button" class="btn btn-primary" >Continue</a>
      </div>
    </div>
  </div>
</div>

<script src="/js/edit-product-page.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js"></script>

<!-- Initialize the editor. -->
<script>
  new FroalaEditor('textarea');
</script>